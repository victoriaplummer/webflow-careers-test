---
import { DevLinkProvider } from '../../devlink/DevLinkProvider.jsx';
import { GlobalCustomCode } from '../../devlink';
import { Navigation } from '../../devlink/Navigation';
import { LoadingIndicator } from '../components/LoadingIndicator';
import { CachePreloader } from '../components/CachePreloader';
import "../../src/layouts/globals.css";
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
		<meta name="generator" content="Astro" />
		<title>Webflow Cloud - Astro Starter</title>
		
		<!-- Critical CSS to prevent FOUC -->
		<style>
			/* Prevent FOUC by setting initial theme immediately */
			html {
				visibility: hidden;
				opacity: 0;
				transition: opacity 0.1s ease-in-out;
			}
			
			html.theme-loaded {
				visibility: visible;
				opacity: 1;
			}
			
			/* Critical base styles to prevent layout shift */
			body {
				margin: 0;
				font-family: 'Inter', system-ui, sans-serif;
				background-color: #ffffff;
				color: #374151;
				transition: background-color 0.3s ease, color 0.3s ease;
			}
			
			/* Dark theme critical styles */
			html[data-theme="dark"] body {
				background-color: #111827;
				color: #f9fafb;
			}
			
			/* Ensure proper font loading */
			@font-face {
				font-family: 'Inter';
				font-display: swap;
			}
		</style>
		
		<script>
			// Theme initialization script - runs before any other scripts
			(function() {
				try {
					const theme = localStorage.getItem('theme') || 'light';
					console.log("üöÄ Initial theme loading:", theme);
					document.documentElement.setAttribute('data-theme', theme);
					document.documentElement.classList.add('theme-loaded');
					
					// Debug: Log CSS custom properties
					const root = document.documentElement;
					const computedStyle = getComputedStyle(root);
					console.log("üé® CSS Custom Properties:", {
						'--fallback-b1': computedStyle.getPropertyValue('--fallback-b1'),
						'--fallback-bc': computedStyle.getPropertyValue('--fallback-bc'),
						'--b1': computedStyle.getPropertyValue('--b1'),
						'--bc': computedStyle.getPropertyValue('--bc')
					});
				} catch (e) {
					console.error("‚ùå Theme initialization error:", e);
					// Fallback if localStorage is not available
					document.documentElement.setAttribute('data-theme', 'light');
					document.documentElement.classList.add('theme-loaded');
				}
			})();
			
		</script>
		
		<!-- Load Webflow styles after critical CSS -->
		<link rel="stylesheet" href="/devlink/global.css" media="print" onload="this.media='all'">
		<noscript><link rel="stylesheet" href="/devlink/global.css"></noscript>
	</head>
	<body class="bg-base-100 text-base-content transition-colors duration-300">
		<LoadingIndicator client:load />
		<CachePreloader ghSlug="webflow" client:load />
		
		<DevLinkProvider client:load>
			<slot />
		</DevLinkProvider>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
